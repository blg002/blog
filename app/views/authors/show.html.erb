<article class="hentry">
	<header>
		<h1><%= @author.name %>'s Articles</h1>
		
		<% if current_author %>
			<ul class="inll article-actions">
				<li class="edit"><%= link_to 'Edit', edit_author_path(@author) %></li>
				<li class="delete"><%= link_to 'Delete', @author, :confirm => "Are you sure you want to delete this author?", :method => :delete %>
			</ul>
		<% end %>
	</header>
	
	<div class="entry-content hfeed">
		<% @author.articles.reverse_each do |article| %>
			<article class="hentry">
				<h2 class="entry-title"><%= link_to article.title, article, :rel => 'bookmark' %></h2>
				<div class="entry-summary">
					<%= raw truncate(article.body, :length => 300) %>
				</div>
			</article>
		<% end %>
	</div>
</article>