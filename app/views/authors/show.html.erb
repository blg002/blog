<% content_for :title, "#{@author.name}'s Articles" %>

<article class="hentry">
	<header>
		<h1><%= @author.name %>&rsquo;s Articles</h1>
		
		<% if current_author %>
			<ul class="inll article-actions">
				<li class="edit"><%= link_to 'Edit', edit_author_path(@author) %></li>
				<li class="delete"><%= link_to 'Delete', @author, confirm: "Are you sure you want to delete this author?", method: :delete %>
			</ul>
		<% end %>
	</header>
	
	<ul>
		<% @author.articles.reverse_each do |article| %>
			<%= content_tag_for(:li, article) do %>
				<%= link_to article.title, article, rel: 'bookmark' %>
				<% if current_author %>
					(<%= link_to 'Delete', article, method: :delete, remote: true, class: 'delete' %>)
				<% end %>
			<% end %>
		<% end %>
	</ul>
</article>