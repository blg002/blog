<h1 class="entry-title"><%= @article.title %></h1>

<p><%= @article.created_at.strftime("Published on %m/%d/%Y") %></p>

<p>Written by <%= link_to @article.user.name, @article.user %></p>

<div class="entry-content">
	<%= @article.body %>
</div>

<p><%= link_to 'All articles', articles_path %></p>

<% if current_user %>
	<h2>Article admin</h2>
	<p><%= link_to 'Edit this article', edit_article_path(@article) %></p>
	<p><%= link_to 'Delete this article!', @article, :confirm => "Are you sure?", :method => :delete %></p>
<% end %>