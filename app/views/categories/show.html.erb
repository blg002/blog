<article class="hentry">
	<header>
		<h1>List of articles categorized with: <%= @category.name %></h1>
		
		<% if current_author %>
			<ul class="inll article-actions">
				<li class="edit"><%= link_to 'Edit', edit_category_path(@category) %></li>
				<li class="delete"><%= link_to 'Delete', @category, confirm: "Are you sure you want to delete this category?", method: :delete %>
			</ul>
		<% end %>
	</header>
	
	<div class="entry-content hfeed">
		<% @category.articles.reverse_each do |article| %>
			<article class="hentry">
				<h2 class="entry-title"><%= link_to article.title, article, rel: 'bookmark' %></h2>
				<div class="entry-summary">
					<%= raw truncate(article.body, length: 300) %>
					<p><%= link_to 'Read more', article, rel: 'nofollow' %></p>
				</div>
			</article>
		<% end %>
	</div>
</article>