<% content_for :title, "Categories" %>

<h1>Categories</h1>

<ul id="categories">
	<%= render @categories %>
</ul>

<%= form_for(Category.new, remote: true) do |category_form| %>
	<ul>
		<li>
			<%= category_form.label :name %>
			<%= category_form.text_field :name %>
		</li>
		<li class="button"><%= category_form.submit %></li>
	</ul>
<% end %>